@model SignUpViewModel
@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="~/CoreBlogTema/js/jquery-2.2.3.min.js"></script>
<script src="/cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container">
    <div class="inner-sec">
        <div class="login p-5 bg-light mx-auto mw-100 text-center">
            <div>
                <h3 class="text-center">Yeni bir hesap oluştur !</h3>
                <br />
                <form class="form-group" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Mail Adresiniz</label>
                        <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-6 mb-3">
                                <label>Parolanız</label>
                                <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Parola" required>
                            </div>
                            <div class="col-6 mb-3">
                                <label>Parola Onayı</label>
                                <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Parola Tekrar" required>
                            </div>
                        </div>
                    </div>
                    <div class="text-danger mb-3" asp-validation-summary="All"></div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>
                    </div>                   
                    <p class="text-muted text-center"><small>Bir hesabınız var mı ?</small></p>
                    <a class="btn btn-sm btn-white btn-block" href="/Login/Index">Giriş Yap</a>                    
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });
    });
</script>



