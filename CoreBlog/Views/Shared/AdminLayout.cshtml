
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Teması</title>
    <link href="~/CoreAdminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/CoreAdminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/CoreAdminTema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/CoreAdminTema/css/animate.css" rel="stylesheet">
    <link href="~/CoreAdminTema/css/style.css" rel="stylesheet">

</head>
<body>
    <div id="wrapper">
        @await Html.PartialAsync("~/Views/Admin/AdminNavbarPartial.cshtml")
        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                        <form role="search" class="navbar-form-custom" action="search_results.html">
                            <div class="form-group">
                                <input type="text" placeholder="Menüyü Genişlet/Daralt" class="form-control" name="top-search" id="top-search">
                            </div>
                        </form>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li class="dropdown">
                            <a class="dropdown-toggle count-info" data-toggle="dropdown" href="/Admin/Widget/Index">
                                <i class="fa fa-envelope"></i>  <span class="label label-warning">0</span>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#/Admin/Widget/Index">
                                <i class="fa fa-bell"></i>  <span class="label label-primary">0</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Login/LogOut/">
                                <i class="fa fa-sign-out"></i> Çıkış Yap
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
            <div class="wrapper wrapper-content animated fadeInRight">
            @RenderBody()

        </div>
    </div>

    <script src="~/CoreAdminTema/js/jquery-3.1.1.min.js"></script>
    <script src="~/CoreAdminTema/js/popper.min.js"></script>
    <script src="~/CoreAdminTema/js/bootstrap.js"></script>
    <script src="~/CoreAdminTema/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/CoreAdminTema/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/CoreAdminTema/js/plugins/peity/jquery.peity.min.js"></script>
    <script src="~/CoreAdminTema/js/inspinia.js"></script>
    <script src="~/CoreAdminTema/js/plugins/pace/pace.min.js"></script>
    <script src="~/CoreAdminTema/js/plugins/iCheck/icheck.min.js"></script>
    <script src="~/CoreAdminTema/js/demo/peity-demo.js"></script>

    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
    @await RenderSectionAsync("scripts", false)
</body>
</html>

